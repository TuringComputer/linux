#include "imx6ux-turing.dtsi"

/ {
	chosen {
		stdout-path = &uart4;
	};
	
	clocks {
		#address-cells = <1>;
		#size-cells = <0>;
		audio_clk: clock@0 {
			compatible = "fixed-clock";
			reg = <0>;
			#clock-cells = <0>;
			clock-frequency = <12288000>;
		};
	};
	
	backlight {
		compatible = "pwm-backlight";
		pwms = <&pwm3 0 1000000>;
		brightness-levels = <0 4 8 16 32 64 128 255>;
		default-brightness-level = <7>;
		enable-gpios = <&gpio1 19 GPIO_ACTIVE_HIGH>;
		status = "okay";
	};

	pxp_v4l2 {
		compatible = "fsl,imx6ul-pxp-v4l2", "fsl,imx6sx-pxp-v4l2", "fsl,imx6sl-pxp-v4l2";
		status = "okay";
	};
	
	leds {
		compatible = "gpio-leds";
		status = "okay";
		
		led1 {
			gpios = <&gpio2 9 GPIO_ACTIVE_HIGH>;
			default-state = "on";
			linux,default-trigger = "none";
		};
		
		led2 {
			gpios = <&gpio2 8 GPIO_ACTIVE_HIGH>;
			default-state = "on";
			linux,default-trigger = "none";
		};
		
		led3 {
			gpios = <&gpio2 0 GPIO_ACTIVE_HIGH>;
			default-state = "on";
			linux,default-trigger = "none";
		};
		
		led4 {
			gpios = <&gpio5 9 GPIO_ACTIVE_HIGH>;
			default-state = "on";
			linux,default-trigger = "none";
		};
		
		led5 {
			gpios = <&gpio2 7 GPIO_ACTIVE_HIGH>;
			default-state = "on";
			linux,default-trigger = "none";
		};
	};
	
	gpio-keys {
		compatible = "gpio-keys";
		label = "gpio-keys";

		home {
			label = "Home";
			gpios = <&gpio5 6 GPIO_ACTIVE_LOW>;
			gpio-key,wakeup;
			linux,code = <KEY_HOMEPAGE>;
		};

		back {
			label = "Back";
			gpios = <&gpio5 7 GPIO_ACTIVE_LOW>;
			gpio-key;
			linux,code = <KEY_BACK>;
		};

		menu {
			label = "Menu";
			gpios = <&gpio2 3 GPIO_ACTIVE_LOW>;
			gpio-key;
			linux,code = <KEY_MENU>;
		};
	};
	
	sound-sgtl5000 {
		compatible = "fsl,imx-audio-sgtl5000";
		model = "imx-sgtl5000";
		ssi-controller = <&sai2>;
		audio-codec = <&codec>;
		audio-routing =
			"LINE_IN", "Line In Jack",
			"Headphone Jack", "HP_OUT";
		hp-det-gpios = <&gpio2 6 GPIO_ACTIVE_LOW>;
		fsl,no-audmux;
	};

	sii902x_reset: sii902x-reset {
		compatible = "gpio-reset";
		reset-gpios = <&gpio1 1 GPIO_ACTIVE_LOW>;
		reset-delay-us = <100000>;
		#reset-cells = <0>;
		status = "okay";
		initially-in-reset;
	};
	
	regulators {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		reg_usb_hub: reg_usb_hub {
			compatible = "regulator-fixed";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			reg = <1>;
			regulator-name = "usb_hub_rst";
			gpio = <&gpio1 11 GPIO_ACTIVE_HIGH>;
			enable-active-high;
			regulator-off-in-suspend;
		};

		reg_3p3v: 3p3v {
			compatible = "regulator-fixed";
			regulator-name = "3P3V";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			regulator-always-on;
		};
	};
};

&i2c1 {
	codec: sgtl5000@0a {
		compatible = "fsl,sgtl5000";
		reg = <0x0a>;
		clocks = <&audio_clk>;
		status = "okay";
		VDDA-supply = <&reg_3p3v>;
		VDDIO-supply = <&reg_3p3v>;
	};
	
	lsm9ds1-ag@0x6B {
        compatible = "st,lsm9ds1-acc-gyr";
        reg = <0x6B>;
        status = "okay";
        rot-matrix = /bits/ 16 <(1) (0) (0)
                                (0) (1) (0)
                                (0) (0) (1)>;
        g-poll-interval = <100>;
        g-min-interval = <2>;
        g-fs-range = <0>;
        x-poll-interval = <100>;
        x-min-interval = <1>;
        x-fs-range = <0>;
        aa-filter-bw = <0>;
    };

    lsm9ds1-m@0x1E {
        compatible = "st,lsm9ds1-mag";
        reg = <0x1E>;
        status = "okay";
        rot-matrix = /bits/ 16 <(1) (0) (0)
                                (0) (1) (0)
                                (0) (0) (1)>;
        poll-interval = <100>;
        min-interval = <13>;
        fs-range = <0>;
    };
	
};

&i2c3 {
	sii902x@39 {
		compatible = "SiI,sii902x";
		interrupt-parent = <&gpio1>;
		interrupts = <0 2>;
		mode_str ="1366x768@60";
		bits-per-pixel = <16>;
		resets = <&sii902x_reset>;
		reg = <0x39>;
	};
};

&ecspi1 {
	fsl,spi-num-chipselects = <1>;
	cs-gpios = <&gpio2 1 GPIO_ACTIVE_HIGH>;
	
	temp_sensor: lm95071@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "ti,lm95071";
		spi-max-frequency = <1000000>;
		reg = <0>;
	};	
};

&ecspi4 {
	fsl,spi-num-chipselects = <1>;
	cs-gpios = <&gpio5 5 GPIO_ACTIVE_HIGH>;

	flash: m25p80@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "st,m25p32";
		spi-max-frequency = <20000000>;
		reg = <0>;
	};
};

&lcdif {
	display = <&display>;
	status = "okay";

	/* This is for HDMI display */
	display: display {
		bits-per-pixel = <16>;
		bus-width = <24>;

		display-timings {
			native-mode = <&timing0>;
			timing0: timing0 {
				clock-frequency = <33500000>;
				hactive = <800>;
				vactive = <480>;
				hback-porch = <89>;
				hfront-porch = <164>;
				vback-porch = <23>;
				vfront-porch = <10>;
				hsync-len = <10>;
				vsync-len = <10>;
				hsync-active = <0>;
				vsync-active = <0>;
				de-active = <1>;
				pixelclk-active = <0>;
			};
		};
	};
};

&usbotg2 {
	vbus-supply = <&reg_usb_hub>;
};

/* Wifi */
&usdhc2 {
	non-removable;
	no-1-8-v;
	keep-power-in-suspend;
	max-frequency = <50000000>;
};
