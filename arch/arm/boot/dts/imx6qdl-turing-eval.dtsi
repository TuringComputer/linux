#include "imx6qdl-turing.dtsi"
#include <dt-bindings/input/input.h>

/ {
	aliases {
		mxcfb0 = &mxcfb1;
		mxcfb1 = &mxcfb2;
	};
	
	clocks {
		#address-cells = <1>;
		#size-cells = <0>;
		audio_clk: clock@0 {
			compatible = "fixed-clock";
			reg = <0>;
			#clock-cells = <0>;
			clock-frequency = <12288000>;
		};
	};
	
	leds {
		compatible = "gpio-leds";
		status = "okay";
		
		led1 {
			gpios = <&gpio2 3 GPIO_ACTIVE_HIGH>;
			default-state = "on";
			linux,default-trigger = "none";
		};
		
		led2 {
			gpios = <&gpio2 4 GPIO_ACTIVE_HIGH>;
			default-state = "on";
			linux,default-trigger = "none";
		};
		
		led3 {
			gpios = <&gpio2 5 GPIO_ACTIVE_HIGH>;
			default-state = "on";
			linux,default-trigger = "none";
		};
		
		led4 {
			gpios = <&gpio6 7 GPIO_ACTIVE_HIGH>;
			default-state = "on";
			linux,default-trigger = "none";
		};
		
		led5 {
			gpios = <&gpio2 2 GPIO_ACTIVE_HIGH>;
			default-state = "on";
			linux,default-trigger = "none";
		};
	};
	
	gpio-keys {
		compatible = "gpio-keys";
		label = "gpio-keys";

		home {
			label = "Home";
			gpios = <&gpio6 10 GPIO_ACTIVE_LOW>;
			gpio-key,wakeup;
			linux,code = <KEY_HOMEPAGE>;
		};

		back {
			label = "Back";
			gpios = <&gpio6 11 GPIO_ACTIVE_LOW>;
			gpio-key;
			linux,code = <KEY_BACK>;
		};

		menu {
			label = "Menu";
			gpios = <&gpio6 9 GPIO_ACTIVE_LOW>;
			gpio-key;
			linux,code = <KEY_MENU>;
		};
		
		power {
			label = "Power";
			gpios = <&gpio6 31 GPIO_ACTIVE_LOW>;
			gpio-key,wakeup;
			linux,code = <KEY_POWER>;
		};
	};
	
	sound {
		compatible = "fsl,imx-audio-sgtl5000";
		model = "imx-sgtl5000";
		ssi-controller = <&ssi2>;
		cpu-dai = <&ssi2>;
		audio-codec = <&codec>;
		audio-routing =
			"MIC_IN", "Mic Jack",
			"Mic Jack", "Mic Bias",
			"Headphone Jack", "HP_OUT";
		mux-int-port = <2>;
		mux-ext-port = <3>;
		hp-det-gpios = <&gpio7 0 GPIO_ACTIVE_LOW>;
	};

	sii902x_reset: sii902x-reset {
		compatible = "gpio-reset";
		reset-gpios = <&gpio7 12 GPIO_ACTIVE_LOW>;
		reset-delay-us = <100000>;
		#reset-cells = <0>;
		status = "okay";
		initially-in-reset;
	};
	
	backlight {
		compatible = "pwm-backlight";
		pwms = <&pwm1 0 1000000>;
		brightness-levels = <0 4 8 16 32 64 128 255>;
		default-brightness-level = <7>;
		enable-gpios = <&gpio1 22 GPIO_ACTIVE_HIGH>;
		status = "okay";
	};
	
	regulators {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		reg_usb_hub: regulator@1 {
			compatible = "regulator-fixed";
			regulator-min-microvolt = <2800000>;
			regulator-max-microvolt = <2800000>;
			reg = <1>;
			regulator-name = "usb_hub_rst";
			gpio = <&gpio3 20 GPIO_ACTIVE_HIGH>;
			enable-active-high;
			regulator-off-in-suspend;
		};

		reg_audio: regulator@2 {
			compatible = "regulator-fixed";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			reg = <2>;
			regulator-name = "osc-ckih1-enable";
			gpio = <&gpio6 17 GPIO_ACTIVE_HIGH>;
			enable-active-high;
			regulator-boot-on;
			regulator-off-in-suspend;
		};
	};
};

&i2c1 {
	codec: sgtl5000@0a {
		compatible = "fsl,sgtl5000";
		reg = <0x0a>;
		clocks = <&audio_clk>;
		VDDA-supply = <&reg_audio>;
		VDDIO-supply = <&reg_audio>;
		status = "okay";
	};
	
	lsm9ds1-ag@0x6B {
        compatible = "st,lsm9ds1-acc-gyr";
        reg = <0x6B>;
        status = "okay";
        rot-matrix = /bits/ 16 <(1) (0) (0)
                                (0) (1) (0)
                                (0) (0) (1)>;
        g-poll-interval = <100>;
        g-min-interval = <2>;
        g-fs-range = <0>;
        x-poll-interval = <100>;
        x-min-interval = <1>;
        x-fs-range = <0>;
        aa-filter-bw = <0>;
        /*gpios = <&gpio2 5 GPIO_ACTIVE_HIGH>, <&gpio6 7 GPIO_ACTIVE_HIGH>;*/
    };

    lsm9ds1-m@0x1E {
        compatible = "st,lsm9ds1-mag";
        reg = <0x1E>;
        status = "okay";
        rot-matrix = /bits/ 16 <(1) (0) (0)
                                (0) (1) (0)
                                (0) (0) (1)>;
        poll-interval = <100>;
        min-interval = <13>;
        fs-range = <0>;
        /*gpios = <&gpio2 4 GPIO_ACTIVE_HIGH>;*/
    };
	
};

&i2c3 {
	sii902x@39 {
		compatible = "SiI,sii902x";
		interrupt-parent = <&gpio7>;
		interrupts = <1 2>;
		mode_str ="1280x720M@60";
		bits-per-pixel = <16>;
		resets = <&sii902x_reset>;
		reg = <0x39>;
	};
};

&usbh1 {
	vbus-supply = <&reg_usb_hub>;
};

&ecspi1 {
	fsl,spi-num-chipselects = <1>;
	cs-gpios = <&gpio6 16 GPIO_ACTIVE_HIGH>;

	flash: m25p80@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "st,m25p32";
		spi-max-frequency = <20000000>;
		reg = <0>;
	};
};

&ecspi2 {
	fsl,spi-num-chipselects = <1>;
	cs-gpios = <&gpio2 1 GPIO_ACTIVE_HIGH>;
	
	temp_sensor: lm95071@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "ti,lm95071";
		spi-max-frequency = <1000000>;
		reg = <0>;
	};	
};

&pcie {
	power-on-gpio = <&gpio1 23 GPIO_ACTIVE_HIGH>;
	reset-gpio = <&gpio7 8 GPIO_ACTIVE_LOW>;
	wakeup-gpio = <&gpio5 2 GPIO_ACTIVE_HIGH>;
};


&ldb {
	lvds-channel@0 {
		fsl,data-mapping = "spwg";
		fsl,data-width = <18>;
		status = "okay";
		primary;

		display-timings {
			native-mode = <&timing0>;
			timing0: atm0700l6bt {
				clock-frequency = <30000000>;
				hactive = <800>;
				vactive = <480>;
				hback-porch = <46>;
				hfront-porch = <210>;
				vback-porch = <23>;
				vfront-porch = <22>;
				hsync-len = <10>;
				vsync-len = <10>;
			};
		};
	};
};

&usdhc3 {
	max-frequency = <50000000>;
};